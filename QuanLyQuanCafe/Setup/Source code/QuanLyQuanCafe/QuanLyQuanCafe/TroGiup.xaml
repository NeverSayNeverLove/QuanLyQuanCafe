            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="Đặng Như Thuỷ" FontSize="15" Foreground="White"/>
            <Label Grid.Row="1" Content="Trần Minh Quang" FontSize="15" Foreground="White"/>
            <Label Grid.Row="2" Content="Trịnh Văn Đại" FontSize="15" Foreground="White"/>
            <Label Grid.Row="3" Content="Lớp: Việt Nhật - K59" FontSize="15" Foreground="White"/>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                
                    <RowDefinition Height="6*"/>
                </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Quản Lý Quán Cafe" FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.ColumnSpan="2" Foreground="#FFD80F0F"/>
